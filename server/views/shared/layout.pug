doctype
html
    head
        title NotesIHit
        link(rel="stylesheet" href="/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/main.css")
    body
        header.container-fluid
            nav.navbar.navbar-inverse
                div.container-fluid
                    ul.nav.navbar-nav
                        li.nav-item.logo
                            a(href="/")
                        li.nav-item
                            a(href="/users") Users
                        li.nav-item
                            a(href="/categories") Categories
                        li.nav-item
                            a(href="/events") Events
                    if (currentUser)
                        ul.nav.navbar-nav
                            li.nav-item
                                a(href="/categories/create") Create Category
                            li.nav-item
                                a(href="/events/create") Create Event
                        ul.nav.navbar-nav.navbar-right
                            li.nav-item
                                a(href="/profile") #{currentUser.username}
                            li.nav-item
                                a(href="/logout") Logout
                    if (!currentUser)
                        ul.nav.navbar-nav.navbar-right
                            li.nav-item
                                a(href="/register") Register
                            li.nav-item
                                a(href="/login") Login
            if (errorMessage)
                .alert.alert-danger #{errorMessage}
        block main-content
        footer.footer.navbar.navbar-inverse
                ul.navbar-collapse.collapse.nav.navbar-nav
                    li.nav-item.text-center
                        a(href="/") Home
                    li.nav-item.text-center
                        a(href="/about") About
                    li.nav-item.text-center
                        a(href="/support") Support
                    li.nav-item.text-center
                        a(href="https://github.com/VDGone/NoteIHit") &copy; Undefined
        include scripts
