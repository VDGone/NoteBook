extends ../shared/layout
block main-content
    div.container-table.container-fluid
        div.row.vertical-center-row
            div.text-center.col-md-4.col-md-offset-4
                img(src=user.profilePicture style="width:100%; height:400px").img-responsive
        div.row.vertical-center-row
            div.text-center.col-md-4.col-md-offset-4.btn.btn-default.btn-lg
                a(href="/" role="button" id="update-info") Add Friend
        div.row.vertical-center-row
            div.text-center.col-md-4.col-md-offset-4 #{user.firstName} #{user.lastName}
        div.row.vertical-center-row
            div.text-center.col-md-4.col-md-offset-4 #{user.city}
        div.row.vertical-center-row
            div.text-center.col-md-4.col-md-offset-4 #{user.email}
        div.row.vertical-center-row
            div.text-center.col-md-4.col-md-offset-4 #{user.city}