extends ../shared/layout
block main-content
    div.container-table.container-fluid
        div.row.vertical-center-row
            div.text-center.col-md-4.col-md-offset-4
                img(src=currentUser.profilePicture).img-responsive
        div.row.vertical-center-row
            div.text-center.col-md-4.col-md-offset-4.btn.btn-default.btn-lg
                a(href="/" role="button" id="update-info") Update info
        div.row.vertical-center-row
            div.text-center.col-md-4.col-md-offset-4 #{currentUser.firstName} #{currentUser.lastName}
        div.row.vertical-center-row
            div.text-center.col-md-4.col-md-offset-4 #{currentUser.city}
        div.row.vertical-center-row
            div.text-center.col-md-4.col-md-offset-4 #{currentUser.email}
        div.row.vertical-center-row
            div.text-center.col-md-4.col-md-offset-4 #{currentUser.city}