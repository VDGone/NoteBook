extends ../shared/layout
block main-content
    .main-content
        .shadow
            .main-content-form
                .event-details.container
                    .row
                        .col-lg-12
                            each event in data.events
                                .col-lg-3.col-md-4.col-xs-6.thumb
                                    h1
                                        - var id = event.id
                                            a(href="/events/details/" + id) #{event.title}
                                    p
                                        | #{event.place}
                                    p
                                        | #{event.description}
                .row
                    .col-lg-12
                        .paging-control
                            - for(var i = 1; i <= data.total / data.pageSize; i++)
                            - var number = Math.round(data.total / data.pageSize)
                                | page #{i} of #{number + 1} 
                                a.btn.btn-lf.btn-primary(href=`/events/public?page=${i}&pageSize=${data.pageSize}`) #{i}