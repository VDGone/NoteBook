extends ../shared/layout
block main-content
    // a(href="/events/create" class="btn btn-lg col-md-4 col-md-offset-4") Create Event
    .create-event-form.container-table.container-fluid
        div.row.vertical-center-row
            div.col-md-4.col-md-offset-4
                form(method="post")
                    input(id="title" class="form-control" type="text" name="title" placeholder="Title")
                    input(id="place" class="form-control" type="text" name="place" placeholder="Place")
                    textarea(id="description" class="form-control" type="text" name="description" placeholder="Description")
                    input(type="submit" id="create-events" class="text-center col-md-4 col-md-offset-4 btn btn-default btn-lg" value="submit")